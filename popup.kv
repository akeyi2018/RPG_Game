<MainDisp>
    FloatLayout:
        size: root.size
        canvas.before:
            Color:
                rgba: 0.7, 0.7, 0.7, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Button:
            id: open_button
            text: 'click me!'
            size_hint: (.5, .5)
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release: root.on_release()
<BattleScreen>:
    title: ''
    separator_height: 0
    size_hint: None, None
    size: 800, 750  # Popupウィンドウのサイズを設定
    
    RelativeLayout:
        Image:
            source: "./background_image/pipo-battlebg002.jpg"
            allow_stretch: True
            keep_ratio: False
            size: self.size
            pos: self.pos
           
        BoxLayout:
            id: content
            orientation: 'horizontal'
            pos_hint: {'top': 1.0}
            pos: 10, 500
            size_hint_y: 0.5
            
        Label:
            id: battle_message
            text: 'Monsters have appeared.\n'
            font_size:  30
            text_size: self.size
            size_hint_y: 0.3
            height:  5 * self.font_size
            valign: 'top'
            pos_hint: {'top':  0.4}  #  親ウィジェットの上端に寄せる
            pos:  0,  10  #  親ウィジェットの左上から20ピクセル下に配置

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1  # 垂直方向のサイズを固定する
            height: 10
            Button:
                text: 'Physical Attack'
                font_size: 30
                on_release: root.physical_attack() 
                
            Button:
                text: 'Magical Attack'
                font_size: 30
                on_release: root.magical_attack() 
                
            Button:
                text: 'escape ...'
                font_size: 30 
                on_release: root.dismiss()  # Popupを閉じる
